<body>
  <div class='container'>
    <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 pt-3 px-5 px-sm-0 mx-auto">
       <h1>Editing Book</h1>
          <% if @book.errors.any? %>
            <div class="error-messages">
               <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |msg| %>
                   <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
         <% end %>
        
          <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
            <div class="form-group">
              <%= f.label :title, 'Title' %>
              <%= f.text_field :title ,class:"form-control book_title" %>
            </div>
        
            <div class="form-group">
              <%= f.label :body, 'Opinion' %>
              <%= f.text_area :body ,class:"form-control book_body" %>
            </div>
        
            <div class="actions">
              <%= f.submit 'Submit' ,class: "btn btn-success" %>
            </div>
            <% end %>
            
            <div class="row pt-3 mx-auto">
              <div class="book d-inline ">
              <%= link_to 'Show', book_path(@book) %> 
              </div>
              <div class="d-inline-block mx-2">|</div>
              <div class="back d-inline ps-3">
              <%= link_to 'Back', books_path %>
              </div>
            </div>
        </body>
      