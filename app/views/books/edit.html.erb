<body>
  <h1><strong>Editing Book</strong></h1>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being updated:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
    <div class="field">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body, 'Opinion' %>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Submit' %>
    </div>
    <% end %>
    
      <%= link_to 'Show', book_path(@book) %> |
      <%= link_to 'Back', books_path %>
</body>
