<body>
   <main>
      <div class='container'>
       <div class='row'>  
        <div class="col-sm-12 col-md-8 col-lg-5 pt-3 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        
          <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
              <%= f.label :name, 'Name' %><br>
              <%= f.text_field :name ,class: "form-control name" %>
            </div>
            
            <div class="form-group">
             <label for="inputImage">Image</label><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
            </div>
        
            <div class="form-group">
              <%= f.label :introduction, 'Introduction' %><br>
              <%= f.text_area :introduction ,class: "form-control introduction" %>
            </div>
        
            <div class="form-group">
              <%= f.submit 'Update User' , class:"btn btn-secondary" %>
            </div>
            <% end %>
    
</body>
