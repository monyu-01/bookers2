<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c4e027a92c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav>
      <ul>
        <li><%= link_to "Bookers", root_path %> </li>
      
        <% if user_signed_in? %>
         <li><%= link_to user_path(current_user), class: "" do %>
           <i class="fa-solid fa-home"></i> Home
         <% end %></li>

         <li><%= link_to users_path, class: "" do %>
            <i class="fa-solid fa-users"></i> Users
         <% end %></li>

         <li><%= link_to books_path, class: "" do %>
            <i class="fa-solid fa-book-open"></i> Books
         <% end %></li>

        <li><%= link_to destroy_user_session_path, method: :delete, class: "" do %>
            <i class="fa-solid fa-sign-out-alt"></i> Log out
         <% end %></li>

        <% else %>
         <li><%= link_to root_path, class: "" do %>
            <i class="fa-solid fa-home"></i> Home
         <% end %></li>

        <li><%= link_to about_path, class: "" do %>
           <i class="fa-solid fa-link"></i> About
        <% end %></li>

        <li><%= link_to new_user_registration_path, class: "" do %>
           <i class="fa-solid fa-user-plus"></i> Sign up 
        <% end %></li>

         <li><%= link_to new_user_session_path, class: "" do %>
            <i class="fa-solid fa-sign-in-alt"></i> Log in
        <% end %></li>
       <% end %>

      </ul>
    </nav>
    </header>
       <% flash.each do |key, message| %>
         <div class="flash <%= key %>">
          <p><%= message %></p>
        </div>
       <% end %>

   <%= yield %>
    <footer>
      <div>
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>